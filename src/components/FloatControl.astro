<div class:list={[
  'components-float-control container m-a h-0 flex justify-end',
]}>
  <div class:list={[
    'cfc-back-to-top hidden transition-theme',
    'w-10 h-10 m-r-4 p-2 b-1 b-solid b-gray-400',
    'rounded-5 cursor-pointer',
    'fixed z-1 bottom-8',
  ]}>
    <span class="i-carbon-up-to-top block w-full h-full transition-theme"></span>
  </div>
</div>

<script>
const backTopTop = document.querySelector('.cfc-back-to-top')

document?.addEventListener('scroll', () => {
  const isHidden = backTopTop?.classList.contains('hidden')

  if (document.documentElement.scrollTop > 300 && isHidden) {
    backTopTop?.classList.remove('hidden')
  } else if (document.documentElement.scrollTop <= 300 && !isHidden) {
    backTopTop?.classList.add('hidden')
  }
})

backTopTop?.addEventListener('click', () => {
  window.scrollTo({ top: 0, behavior: 'smooth' })
})
</script>

<style>
.cfc-back-to-top {
  background-color: var(--color-bg);
}
.i-carbon-up-to-top {
  background-color: var(--color-text);
}
</style>
